#include <fstream>
#include <iostream>
using namespace std;



int main()
{
    int ticket = 0 , lucky = 0 , unlucky = 0; 
    ifstream Tiketsinput;
    Tiketsinput.open("tickets.txt");
    luckOutput.open("lucky.txt");
    unluckOutput.open("unlucky.txt");
