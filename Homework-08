    for (int i = 0; i < 1000; i++){
        Tiketsinput >> ticket;
        if ((ticket / 100000 + ticket / 10000 % 10 + ticket / 1000 % 10) == (ticket / 100 % 10 + ticket / 10 % 10 + ticket % 10)) {
            luckOutput << ticket << endl;
            lucky++;
        }
        else{
            unluckOutput << ticket << endl;
            unlucky++;
        }
    }
    cout << "Lucky tikets =  " << lucky << " ; unlucky tikets  = " << unluckCount << endl;


}
